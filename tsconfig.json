{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "lib": [
            "dom",
            "dom.iterable",
            "scripthost"
        ],
        "jsx": "react",
        "noEmit": true,
        "strict": true,
        "rootDir": "./",
        "baseUrl": "./",
        "paths": {
            "src/*": [ "src/*" ],
            "@application/*": [ "src/application/*" ],
            "@domain/*": [ "src/domain/*" ],
            "@infrastructure/*": [ "src/infrastructure/*" ],
            "@presentation/*": [ "src/presentation/*" ],
            "@usecase/*": [ "src/usecase/*" ],
        },
        "outDir": "./build",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "build",
        "node_modules"
    ]
}
